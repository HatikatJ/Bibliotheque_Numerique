{% extends 'base.html.twig' %}

	{% block body %}
		<div class="container"> <div class="row">
			<div class="col-lg-12">
				<div
					class="page-content">

					<!-- ***** section citation Start ***** -->
					<div class="main-banner">
						<div class="row">
							<div class="col-lg-7">
								<div class="header-text"><br>
									<p>
										<h6>
											<em>
												" Lire, c'est voir le monde par mille regards, c'est toucher l'autre dans son essentiel secret, c'est la reponse providentielle à ce grand défaut que l'on a tous de n'etre que soi. "
											</em>
										</h6>
									</p>
									<h5>SERGE JONCOUR</h5>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** section  End ***** -->

					<!-- ***** section livres les plus lus Start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Les plus lus</em>
										en ce moment</h4>
								</div>
								<div class="main-border-button">
									<a href="{{ path('app_livre') }}">Voir tous les livres</a>
								</div>
								<div class="row">
									{% for livre in livres %}
										{% set nbLecteurs = livre.getUtilisateurLecteur() | length %}
										<div class="col-lg-3 col-sm-6">
											<div class="item">
												<a href="{{ path('app_detail', {livre:livre.getId()}) }}"><img src={{asset("images/" ~ livre.getImageCouverture())}} alt=""></a>
												<h4>Lecteurs<br><span>Année pub</span>
												</h4>
												<ul>
													<li>
														<i class="fa fa-book-open"></i>
														{{nbLecteurs}}
														{# {{ livre.nombreDeLecteurs }} #}
													</li>
													<li>
														<i class="fa fa-calendar"></i>
														{{livre.getDatePublication() | date("d/m/Y")}}
													</li>
												</ul><br><br>
												<div class="main-button">
													<a href="{{ path('app_detail', {livre:livre.getId()}) }}">Detail</a>
												</div>
											</div>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
					<!-- ***** section livres les plus lus End ***** -->

					<!-- ***** internaute opinion about the site start ***** -->
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Ce que disent</em>
										nos internautes</h4>
								</div>
								<div class="row">
									{% for avisU in paginationAvis %}
										<div class="col-lg-6 col-sm-6">
											<div class="item">
												<div class="box">
													<div class="detail-box">
														<p style="word-wrap: break-word;">{{ avisU.getAvis() }}</p><br>
														<h6>{{avisU.getUtilisateur().getNom()}}</h6>
													</div>
												</div>
											</div>
										</div>
									{% endfor %}
								</div>
								<div class="pagination-container">
									<div class="pagination">
										{{ knp_pagination_render(paginationAvis) }}
									</div>
								</div>
							</div>
						</div>
					</div>
					<!-- ***** internaute opinion about the site End ***** -->

				</div>
			</div>
		</div>
	</div>
{% endblock %}
