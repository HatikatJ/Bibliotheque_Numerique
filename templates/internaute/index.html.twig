{% extends 'base.html.twig' %}

{% block body %}

	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="page-content">

					{# <!-- ***** Mes informations Start ***** --> #}
					<div class="row">
						<div class="col-lg-12 align-self-center">
							<div class="main-profile ">


								{# <div class="row"> #}
									{# <div class="col-lg-6">
										<img src="images/profile.jpg" alt="" style="border-radius: 23px;">
									</div> #}
									{# <div class="col-lg-6 align-self-center"> #}
										<ul>
											<li>Nom :
												<span>{{app.user.nom}}
												</span>
											</li>
											<li>Email :
												<span>{{app.user.email}}</span>
											</li>
										</ul>
									{# </div> #}
								{# </div> #}

							</div>
						</div>
					</div>
					{# <!-- ***** Mes informations End ***** --> #}


					{# <!-- ***** Livre deja lu Start ***** --> #}
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Livres
										</em>
										  deja lus</h4>
								</div>

								<div class="row">
								{% for livre in livreL %}
									<div class="col-lg-3 col-sm-6">
										<div class="item">
											<a href="{{ path('app_dejalu', {livre:livre.getId()}) }}"><img src={{asset("images/" ~ livre.getImageCouverture())}} alt=""></a>
											{# <div class="main-button">
												<a href="{{ path('app_detail', {livre:livre.getId()}) }}">Detail</a>
											</div> #}
										</div>
									</div>
								{% endfor %}
								</div>
							</div>
						</div>
					</div>
					{# <!-- *****Livre deja lu End ***** --> #}

                    {# <!-- *****Livre enregistrés Start ***** --> #}
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12">
								<div class="heading-section">
									<h4>
										<em>Livres
										</em>
										enregistrés</h4>
								</div>

								<div class="row">
									{% for livre in livreE %}
										<div class="col-lg-3 col-sm-6">
											<div class="item">
												<a href="{{ path('app_detail', {livre:livre.getId()}) }}"><img src={{asset("images/" ~ livre.getImageCouverture())}} alt=""></a>
												{# <div class="main-button">
													<a href="{{ path('app_detail', {livre:livre.getId()}) }}">Detail</a>
												</div> #}
											</div>
										</div>
									{% endfor %}
								</div>
							</div>
						</div>
					</div>
                    {# <!-- *****Livre enregistrés End ***** --> #}


                    {# <!-- ***** Mes Avis Start ***** --> #}
					<div class="gaming-library profile-library">
						<div class="col-lg-12">
							<div class="heading-section">
								<h4>
									<em>Mes Avis</em>
									sur le site</h4>
							</div>

							{% for avisU in avis %}
							<div class="item">
								<div class="main-info header-text">

									{# <div class="overflow-auto" style="max-width: 1500px; max-height: 400px;"> #}
										
										<div class="row">
											
											<div class="col-lg-8">
												<div class="text-white" style="text-overflow: clip">
													<p style="word-wrap: break-word;">{{avisU.getAvis()}}</p>
												</div>
											</div>
											<div class="col-lg-4">
												<div class="main-border-button">
													<a href="{{ path('app_supprimer_avis', {id: avisU.id}) }}">Supprimer</a>
												</div>
											</div>
											<hr>
											
										</div>
										
									{# </div> #}

								</div>
							</div>
							{% endfor %}
							
						</div>
					</div>
					{# <!-- ***** Mes Avis End ***** --> #}

					{# <!-- ***** Ajouter un avis start ***** --> #}
					<div class="most-popular">
						<div class="row">
							<div class="col-lg-12 align-self-center">
								<div class="main-info header-text">
									
									<h4>Ajouter un avis</h4>
									<br>
									{{ form_start(form) }}
										{{ form_row(form.avis, { 'attr': {'rows': '10', 'cols': '50', 'style': 'display: block; max-width: 1000px; width: 100%; font-size: 1.2em; padding: 10px; margin-bottom: 15px;'} })}}
									<br>
									<div class="main-border-button">
										<div style="text-align: center;">
											{{ form_row(form.soumettre, { 'attr': {'style': 'background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 105px; cursor: pointer;'} })}}
										</div>
									</div>
									{{ form_end(form) }}
								</div>
							</div>
						</div>
					</div>
                    {# <!-- ***** Ajouter un avis start ***** --> #}

				</div>
			</div>
		</div>
	</div>


{% endblock %}
