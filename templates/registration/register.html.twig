{% block stylesheets %}
    <style>
        /* Ajoutez votre CSS ici */
        body {
            background-color: #222;
            color: #eee;
        }
        .container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #333;
            box-shadow: 0px 0px 5px #555;
            text-align: center; /* Centrer le contenu de la div container */
        }
        h1 {
            font-size: 28px;
            text-align: center;
            color: #eee;
            margin-bottom: 30px;
        }
        .form-group label {
            color: #ddd;
            font-size: 16px;
            font-weight: bold;
            margin-bottom: 10px;
            display: block;
            text-align: left; /* Aligner les labels à gauche */
        }
        .form-check-label {
            color: #ddd;
            font-size: 16px;
            margin-bottom: 10px;
            display: flex;
            align-items: center; /* Aligner les éléments verticalement */
        }
        .form-check-input {
            width: 30px;
            height: 30px;
            margin-right: 10px;
        }
        .form-control {
            border-radius: 0;
            border: none;
            box-shadow: none;
            padding: 10px;
            font-size: 16px;
            margin-bottom: 20px;
            border-bottom: 1px solid #555;
            background-color: transparent;
            color: #eee;
            width: 100%; /* Utiliser toute la largeur disponible */
            text-align: center; /* Centrer le texte dans les champs de formulaire */
        }
        .form-control:focus {
            box-shadow: none;
            border-bottom: 1px solid #fff;
        }
        .checkbox label {
            font-weight: normal;
            color: #ddd;
        }
        .btn {
            background-color: #ff4081;
            color: #fff;
            padding: 10px 20px;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            margin-top: 20px;
        }
        .btn:hover {
            background-color: #e91e63;
        }
    </style>
{% endblock %}




{% block body %}
    <div class="container">
        <h1>Register</h1>
        {{ form_start(registrationForm) }}
            <div class="form-group">
                {{ form_label(registrationForm.nom) }}
                {{ form_widget(registrationForm.nom, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email) }}
                {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.password.first, 'Password') }}
                {{ form_widget(registrationForm.password.first, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.password.second, 'Confirm Password') }}
                {{ form_widget(registrationForm.password.second, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div>
               {{ form_row(registrationForm.agreeTerms) }}
            </div><br><br>
            <button type="submit" class="btn">Register</button>
        {{ form_end(registrationForm) }}    
    </div>
{% endblock %}
